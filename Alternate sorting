Sample Input â€“ Alternate Sorting 


Input: {1, 2, 3, 4, 5, 6, 7}
output: {7, 1, 6, 2, 5, 3, 4}


#include<stdio.h>

#define max 100

void alternatesort(int a[],int size){
    int i=0,j=0;
    for(i=0;i<size;i++){
        for(j=0;j<size;j++){
            if(a[i]<a[j]){
                int temp=a[i];
                a[i]=a[j];
                a[j]=temp;
            }
        }
    }
    int result[size],left=0,right=size-1;
    for(i=0;i<size;i++){
        if(i%2==0){
            result[i]=a[right--];
        }
        else{
            result[i]=a[left++];
        }
    }
    for(i=0;i<size;i++){
        a[i]=result[i];
    }
}
void sort(int result[],int size){
    for(int i=0;i<size;i++){
        printf("%d ",result[i]);
    }
}

int main(){
    int size=0,input,a[max];
    while(size<max && scanf("%d",&input)==1){
        a[size++]=input;
    }
    alternatesort(a,size);
    sort(a,size);
    return 0;
    
}
